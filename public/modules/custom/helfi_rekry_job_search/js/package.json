{
  "name": "helfi-etusivu-news-search",
  "version": "0.1.0",
  "private": true,
  "homepage": ".",
  "dependencies": {
    "@appbaseio/reactivesearch": "3.42.1",
    "@emotion/styled": "11.10.5",
    "date-fns": "2.29.3",
    "hds-react": "2.6.0",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "eslintConfig": {
    "extends": ["react-app", "react-app/jest"],
    "overrides": [
      {
        "files": ["**/*.ts?(x)"],
        "rules": {
          "react-hooks/exhaustive-deps": 0
        }
      }
    ]
  },
  "scripts": {
    "analyze": "node ./analyze.js",
    "start": "BROWSER=none react-app-rewired start",
    "build": "react-app-rewired build && cp ./build/static/js/main*.js ../assets/main.js",
    "test": "TZ=UTC react-app-rewired test",
    "eject": "react-app-rewired eject",
    "prepare": "cd ../../../../../ && husky install public/modules/custom/helfi_rekry_job_search/js/.husky"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "@types/node": "^16.11.6",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "buffer": "^6.0.3",
    "husky": ">=4",
    "lint-staged": ">=10",
    "path-browserify": "^1.0.1",
    "prettier": "^2.7.1",
    "process": "^0.11.10",
    "progress-bar-webpack-plugin": "^2.1.0",
    "react-app-rewired": "^2.2.1",
    "react-scripts": "^5.0.1",
    "react-test-renderer": "^17.0.2",
    "typescript": "4.9.3",
    "webpack-bundle-analyzer": "^4.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,css}": [
      "eslint --rule 'no-console: error'",
      "prettier --write"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules",
      "<rootDir>/src/index.tsx",
      "<rootDir>/src/enum/*",
      "<rootDir>/src/types/*"
    ]
  }
}
